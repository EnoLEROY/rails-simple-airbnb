  <div class="navbar bg-light d-inline-flex justify-content-between w-100 px-3">
    <p>Simple AirBnB</p>
    <%= link_to new_flat_path, class:"text-decoration-none" do %>
      <button class=" btn btn-outline-primary">Add Flat</button>
    <% end %>
  </div>

<div class="container my-4">
  <h2>Flats avalables (<%= @flats.length %>)</h2>

  <div class="row ">
    <% @flats.each do |flat| %>
      <div class="card col-4 d-flex align-items-start pt-2">
        <div class="mb-auto">
          <p><strong><%= flat.name %></strong></p>
          <p><%= flat.address %></p>
        </div>
        <div class="d-inline-flex justify-content-between align-items-center w-100 px-2">
          <p><i class="fa-solid fa-euro-sign"></i><%= flat.price_per_night %></p>
          <p><i class="fa-solid fa-person"></i><%= flat.number_of_guests %></p>
        </div>
        <%= link_to flat_path(flat), class:"d-grid mx-auto gap-2 col-12 mx-0 text-decoration-none" do  %>
        <button class="btn btn-light">Show more</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
